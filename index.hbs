{{!< default}}

<main class="main_content_m" role="main">
	{{> header}}

		{{#foreach posts}}
			<article class="post_m animated fadeInLeft">
				<div id="drawer-navigation" class="drawer-navigation index_post_wrapper_m">
					<header class="post_header_m">
						<p class="time_tags">
							{{date published_at format="MMMM DD, YYYY"}}
							in
							{{#foreach tags}}
								<span><a href="{{url}}">{{name}}</a></span>
							{{/foreach}}
						</p>
						<a class="link_hover" href="{{{url}}}">{{title}}</a>
					</header>
				</div>
			</article>
		{{/foreach}}

	{{#if pagination}}
		<div class="pagination">
			{{{pagination}}}
		</div>
	{{/if}}
</main>